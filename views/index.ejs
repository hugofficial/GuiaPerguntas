<%- include ('partials/header.ejs') %>
<body>
  <%- include ('partials/navbar.ejs') %>

  <div class="container">
    <hr />
    <h1>Perguntar</h1>
    <hr />
    <a href="/perguntar" class="btn btn-outline-info">Perguntar</a>
    <hr />

    <% perguntas.forEach( pergunta => { %>
    <br />
    <di class="card">
      <div class="card-body">
        <h3><%= pergunta.titulo %></h3>
      </div>
      <div class="card-footer">
        <a href="/pergunta/<%= pergunta.id %>">
          <button class="btn btn-outline-info">Responder</button>
        </a>
      </div>
    </di>
    <%}) %>
  </div>
</body>
<%- include ('partials/footer.ejs') %>
